{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Metadata": {
    "Protego" : {
      "Functions": {
        "NewCustomerLambdaFunction": {
          "CodeLocation": "../../../inputs/python_zip/newCustomer.zip"
        }
      },
      "Layers": {
        "MyLayer": {
          "CodeLocation": "../../../inputs/python_sqs_send"
        }
      }
    }
  },
  "Parameters" : {
    "ServerlessDeploymentBucket" : {
      "Type" : "String",
      "Default" : "testlambdalayers"
    }
  },

  "Resources": {
    "MyLayer": {
        "Type": "AWS::Lambda::LayerVersion",
        "Properties": {
            "CompatibleRuntimes": [
                "python2.7"
            ],
            "Content": {
                "S3Bucket": {
                "Ref": "ServerlessDeploymentBucket"
              },
                "S3Key": "newCustomer.zip"
            },
            "Description": "My layer",
            "LayerName": "my-layer",
            "LicenseInfo": "MIT"
        }
    },

    "NewCustomerLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/newCustomer"
      }
    },
    "NewCustomerLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Layers": [{"Ref": "MyLayer" }],
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "newCustomer.zip"
        },
        "FunctionName": "newCustomer",
        "Handler": "python_new_file_handler.lambda_handler",
        "MemorySize": 1024,
        "Role": {
          "Fn::GetAtt": [
            "newCustomerRole",
            "Arn"
          ]
        },
        "Runtime": "python2.7",
        "Timeout": 6,
        "Description": "handle new customer event."
      },
      "DependsOn": [
        "NewCustomerLogGroup",
        "newCustomerRole"
      ]
    },
    "newCustomerRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "AnalyzersDoneRole",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "someInlinePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": {
                    "Fn::Join": [
                      ":",
                      [
                        "arn:aws:logs",
                        {
                          "Ref": "AWS::Region"
                        },
                        {
                          "Ref": "AWS::AccountId"
                        },
                        "log-group:/aws/lambda/*:*:*"
                      ]
                    ]
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:PutItem"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [
                        ":",
                        [
                          "arn:aws:dynamodb",
                          {
                            "Ref": "AWS::Region"
                          },
                          {
                            "Ref": "AWS::AccountId"
                          },
                          "table/functions_table"
                        ]
                      ]
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "sts:AssumeRole"
                  ],
                  "Resource": "*"
                }
              ]
            }
          },
          {
            "PolicyName": "otherInlinePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [
                        ":",
                        [
                          "arn:aws:sns",
                          {
                            "Ref": "AWS::Region"
                          },
                          {
                            "Ref": "AWS::AccountId"
                          },
                          "my_topic"
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": {
        "Ref": "ServerlessDeploymentBucket"
      }

    }
  }
}
